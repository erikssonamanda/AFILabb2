@model AnnonssystemMVC.Models.Ads

@{
    ViewData["Title"] = "Radera annons";
}

<h2>Är du säker på att du vill radera annonsen?</h2>
<h4>Annons: @Html.DisplayFor(model => model.Ad_Id)</h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Id
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ad_Id)
        </dd>
        <dt>
            Annonsör
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ad_Annonsor)
        </dd>
        <dt>
            Rubrik
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ad_Rubrik)
        </dd>
        <dt>
            Annonspris
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ad_AnnonsPris)
        </dd>
        <dt>
            Pris
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ad_VaransPris)
        </dd>
        <dt>
            Innehåll
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ad_Innehall)
        </dd>
    </dl>
</div>
<form asp-action="DeleteAd">
    <input type="submit" value="Radera annons" class="btn btn-danger" />
</form>
<br />
<div>
    <a asp-action="ReadAllaAds" class="btn btn-dark">Tillbaka</a>
</div>